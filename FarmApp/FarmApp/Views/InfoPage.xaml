<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:prism="http://prismlibrary.com"
             prism:ViewModelLocator.AutowireViewModel="True"
             x:Class="FarmApp.Views.InfoPage"
             Title="{Binding Title}">
    
    <Grid VerticalOptions="Center" HorizontalOptions="Center">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Label Text="Direction: " Grid.Row="0" Grid.Column="0"/>
        <Label Text="{Binding Name}" Grid.Row="0" Grid.Column="1"/>
        
        <Label Text="Address: " Grid.Row="1" Grid.Column="0"/>
        <Label Text="{Binding Address}" Grid.Row="1" Grid.Column="1"/>
        
        <Label Text="Schedule: " Grid.Row="2" Grid.Column="0"/>
        <Label Text="{Binding Schedule}" Grid.Row="2" Grid.Column="1"/>
        
        <Label Text="Phone: " Grid.Row="3" Grid.Column="0"/>
        <Label Text="{Binding Phone}" Grid.Row="3" Grid.Column="1"/>
    </Grid>

</ContentPage>